{
  "name": "@unicitylabs/sphere-sdk",
  "version": "0.1.0",
  "description": "Modular TypeScript SDK for Unicity wallet operations",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./impl/browser": {
      "import": "./dist/impl/browser/index.js",
      "types": "./dist/impl/browser/index.d.ts"
    },
    "./impl/nodejs": {
      "import": "./dist/impl/nodejs/index.js",
      "types": "./dist/impl/nodejs/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run clean && npm run build",
    "test": "vitest",
    "test:run": "vitest run",
    "lint": "eslint . --ext .ts",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "unicity",
    "wallet",
    "sdk",
    "crypto",
    "nostr",
    "ipfs"
  ],
  "author": "Unicity Labs",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/unicitylabs/sphere-sdk.git"
  },
  "dependencies": {
    "@noble/hashes": "^2.0.1",
    "@unicitylabs/nostr-js-sdk": "^0.3.2",
    "@unicitylabs/state-transition-sdk": "1.6.0",
    "bip39": "^3.1.0",
    "buffer": "^6.0.3",
    "crypto-js": "^4.2.0",
    "elliptic": "^6.6.1"
  },
  "optionalDependencies": {
    "@helia/ipns": "^9.1.3",
    "@helia/json": "^5.0.3",
    "helia": "^6.0.11"
  },
  "devDependencies": {
    "@types/crypto-js": "^4.2.2",
    "@types/elliptic": "^6.4.18",
    "@types/node": "^22.0.0",
    "fake-indexeddb": "^6.2.5",
    "typescript": "~5.6.0",
    "vitest": "^2.0.0"
  },
  "peerDependencies": {
    "@helia/ipns": ">=9.0.0",
    "@helia/json": ">=5.0.0",
    "helia": ">=6.0.0"
  },
  "peerDependenciesMeta": {
    "@helia/ipns": {
      "optional": true
    },
    "@helia/json": {
      "optional": true
    },
    "helia": {
      "optional": true
    }
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
